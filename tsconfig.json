{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@modules/*": ["modules/*"]
		}
	},
	"exclude": ["node_modules", "**/*.test.ts", "**/dist/**"]
}
