{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["jest", "node"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"isolatedModules": true,
		"composite": true,
		"paths": {
			"@packages/*": ["packages/*"],
			"@services/*": ["services/*"]
		}
	},
	"exclude": ["node_modules", "**/*.test.ts", "**/dist/**"],
	"references": [
		{ "path": "./packages/pong-shared" },
		{ "path": "./packages/pong-client" },
		{ "path": "./packages/security" },
		{ "path": "./packages/common" },
		{ "path": "./services/users/app" },
		{ "path": "./services/auth/app" },
		{ "path": "./services/game/app" },
		{ "path": "./services/2fa/app" },
		{ "path": "./services/frontend/app" },
		{ "path": "./services/social/app" },
		{ "path": "./services/matchmaking/app" },
		{ "path": "./services/game/app" }
	],
	"ts-node": {
		"esm": true
	}
}
