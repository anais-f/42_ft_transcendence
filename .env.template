# Example environment file for local development and CI
# DO NOT commit real secrets. Replace placeholders with real values in a local .env (not committed).

# Service ports
PORT=3000

# Users service
USERS_API_SECRET=change-me
USERS_SERVICE_URL=http://users:${PORT}
USERS_DB_PATH=/data/db-users.sqlite

# Auth service
AUTH_API_SECRET=change-me
AUTH_SERVICE_URL=http://auth:${PORT}
AUTH_DB_PATH=/data/db-auth.sqlite

# Auth Google service
GOOGLE_CLIENT_ID=GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=GOOGLE_CLIENT_SECRET_HERE

# 2FA service
TWOFA_API_SECRET=change-me
TWOFA_SERVICE_URL=http://2fa:${PORT}
TWOFA_DB_PATH=/data/db-2fa.sqlite
TOTP_ENC_KEY=change-me

# Social service
SOCIAL_API_SECRET=change-me
SOCIAL_SERVICE_URL=http://social:${PORT}
SOCIAL_DB_PATH=/data/db-social.sqlite

# Admin credentials
LOGIN_ADMIN=admin
PASSWORD_ADMIN=admin1234

# Monitoring / other
ADMIN_TOKEN=change-me

# Grafana
GF_SERVER_ROOT_URL=http://localhost:8080/grafana/
GF_SERVER_SERVE_FROM_SUB_PATH=true
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin1234

# DTO / OpenAPI
DTO_OPENAPI_FILE=/app/packages/common/openapiDTO.json

# JWT
JWT_SECRET=change-me
JWT_SECRET_SOCIAL=change-me
WS_TOKEN_EXPIRES_SECONDS=30

DISCORD_WEBHOOK_URL='WEBHOOK_URL_HERE'