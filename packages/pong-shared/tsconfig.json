{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./srcs",
		"composite": true,

		"declaration": true,
		"declarationMap": true,
		"module": "NodeNext",
		"target": "ES2020",
		"moduleResolution": "NodeNext",
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": ["srcs/**/*"]
}
