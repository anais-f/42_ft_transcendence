{
	"name": "ft_transcendence",
	"version": "0.0.1",
	"description": "competitive pong website",
	"type": "module",
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:pong": "npm run test:pong:shared && npm run test:pong:client && npm run test:pong:server",
		"test:pong:shared": "node --experimental-vm-modules node_modules/.bin/jest --selectProjects=pong-shared",
		"test:pong:client": "node --experimental-vm-modules node_modules/.bin/jest --selectProjects=pong-client",
		"test:pong:server": "node --experimental-vm-modules node_modules/.bin/jest --selectProjects=pong-server",
		"test:users": "node --experimental-vm-modules node_modules/.bin/jest --selectProjects=users-app",
		"build": "npm run build --workspaces --if-present",
		"build:pong": "npm run build:pong:shared && npm run build:pong:client && npm run build:pong:server",
		"build:pong:shared": "npm run build --workspace=packages/pong-shared",
		"build:pong:client": "npm run build --workspace=packages/pong-client",
		"build:pong:server": "npm run build --workspace=packages/pong-server",
		"build:common": "npm run build --workspace=packages/common",
		"lint": "eslint 'packages/**/*.ts'",
		"format": "prettier --write '**/*.{ts,js,json,css,html,md,yml,yaml}'",
		"format:check": "prettier --check '**/*.{ts,js,json,css,html,md,yml,yaml}'"
	},
	"workspaces": [
		"packages/common",
		"packages/pong-shared",
		"packages/pong-client",
		"packages/pong-server",
		"services/pong-server/app",
		"services/auth/app",
		"services/users/app"
	],
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@jest/types": "^30.2.0",
		"@types/better-sqlite3": "^7.6.13",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.3.0",
		"jest": "^29.7.0",
		"jest-util": "^29.7.0",
		"jiti": "^2.5.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"@fastify/swagger": "^9.5.2",
		"@fastify/swagger-ui": "^5.2.3",
		"@types/jest": "^29.5.14",
		"better-sqlite3": "^12.2.0",
		"D": "^1.0.0",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.0",
		"fastify-type-provider-zod": "^6.0.0",
		"jest-utils": "^0.0.1",
		"node-fetch": "^3.3.2",
		"ts-jest": "^29.4.4",
		"tsx": "^4.20.6",
		"zod": "^4.1.11",
		"zod-openapi": "^5.4.3"
	}
}
