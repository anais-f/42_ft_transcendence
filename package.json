{
	"name": "ft_transcendence",
	"version": "0.0.1",
	"description": "competitive pong website",
	"scripts": {
		
		"test": "jest --config ./jest.config.ts",
		"test:pong": "npm run test:pong:shared ; npm run test:pong:client ; npm run test:pong:server",
		"test:pong:shared": "jest --selectProjects=pong-shared",
		"test:pong:client": "jest --selectProjects=pong-client",
		"test:pong:server": "jest --selectProjects=pong-server",

		"build": "npm run build:pong",
		"build:pong": "cd ./modules/pong && npm run build",

		"lint": "eslint 'modules/**/**/*.ts'",
		"format": "prettier --write 'modules/**/**/*.ts'"
	},
	"workspaces": [
		"modules/pong/packages/shared",
		"modules/pong/packages/client",
		"modules/pong/packages/server"
	],
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@jest/types": "^29.5.0",
		"@types/jest": "^29.5.3",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.3.0",
		"jest": "^29.6.1",
		"jiti": "^2.5.1",
		"prettier": "^3.6.2",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"typescript-eslint": "^8.39.0"
	}
}
